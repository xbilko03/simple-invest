{
  "compilerOptions": {
    "target": "es6",                             // or "esnext" depending on your needs
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",                         // Updated to ESNext
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,                           // Changed to false if you want to generate output files
    "jsx": "react-jsx"                         // Updated to react-jsx for React 17+
  },
  "include": [
    "src"
  ]
}
